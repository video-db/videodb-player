{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["src/env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
      "composite": true,
      "outDir": "dist",
      "declarationDir": "types",
      "allowJs": true,
      "baseUrl": ".",
      "rootDir": "src",
      "paths": {
        "@/*": ["./src/*"]
      }
    }
  }